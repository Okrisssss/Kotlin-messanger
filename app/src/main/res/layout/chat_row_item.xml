<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    android:layout_marginBottom="@dimen/margin_8dp">


    <TextView
        android:id="@+id/message_text_view_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_register_login"
        android:maxWidth="248dp"
        android:padding="@dimen/margin_16dp"
        android:text="This is my message!"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toStartOf="@id/chat_user_photo_to"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_user_photo_to"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_8dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_user_photo_from"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_8dp" />

    <TextView
        android:id="@+id/message_text_view_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_register_login"
        android:maxWidth="248dp"
        android:padding="@dimen/margin_16dp"
        android:text="This is my message!"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintStart_toEndOf="@id/chat_user_photo_from"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>